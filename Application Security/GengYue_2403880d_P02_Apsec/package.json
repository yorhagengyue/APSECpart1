{
  "name": "auth-system",
  "version": "1.0.0",
  "description": "Authentication and Authorization backend system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:https": "node server-https.js",
    "dev": "nodemon server.js",
    "dev:https": "nodemon server-https.js",
    "cert:generate": "node scripts/generate-ssl-cert-simple.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest test/unit.test.js --forceExit",
    "test:frontend": "jest test/frontend-simple.test.js --forceExit",
    "test:all": "jest test/unit.test.js test/frontend-simple.test.js --forceExit",
    "test:coverage": "jest --coverage --forceExit"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-recaptcha": "^5.1.0",
    "fs": "^0.0.1-security",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.5",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 30000
  }
}
